package myScanner;
import java.util.Scanner;
class Exercise2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num , m = 4 , result;
		double value;
		
		Scanner scanMe = new Scanner(System.in);
		
		System.out.println("Enter an integer : ");
		num = scanMe.nextInt();
		System.out.println("Enter Double value : ");
		value = scanMe.nextDouble();
	
		
		System.out.println("Using nextInt() : " + num);
		System.out.println("Using nextDouble() : " + value);
		

		num++;
		value--;
		
		System.out.println("Using nextInt() increment by 1 : " + (num++));
		System.out.println("Using nextDouble() decrement by 1: " + (value--));
		
		num +=5;
		value -=5;
		
		System.out.println("Using nextInt() increment by 5 : " + num);
		System.out.println("Using nextDouble() decrement by 5 : " + value);
		
		num = num %10;
		value = value%10;
		System.out.println("Using nextInt() mod 10 : " + num);
		System.out.println("Using nextDouble() mod 10 : " + value);
		
		result = 3 * (++m);
		System.out.println("The result is " + result);

		double y = Math.pow(num, value);
		System.out.println(y);
		
		

	}

}
